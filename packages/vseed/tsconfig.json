{
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "module": "ESNext",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src",
    "src/**/*.json",
  ]
}