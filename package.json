{
  "name": "vseed-monorepo",
  "private": true,
  "keywords": [
    "vseed",
    "vchart",
    "vtable",
    "visactor"
  ],
  "author": "visactor",
  "description": "VSeed, an elegant data composer, transforming complexity into simplicity.",
  "scripts": {
    "dev": "pnpm --filter=website run dev",
    "build": "pnpm run build:all",
    "format": "pnpm prettier --write .",
    "lint": "pnpm -r --color --parallel lint",
    "type-check": "pnpm -r --color --parallel type-check && pnpm --filter=vseed-llm-test run generate",
    "dev:rsdoctor": "pnpm --filter=@visactor/vseed run dev:rsdoctor",
    "build:all": "turbo build --filter=!/tools/*",
    "build:vseed": "pnpm --filter=@visactor/vseed run build",
    "build:vquery": "pnpm --filter=@visactor/vquery run build",
    "build:vbi": "pnpm --filter=@visactor/vbi run build",
    "build:rsdoctor": "pnpm --filter=@visactor/vseed run build:rsdoctor",
    "build:docs": "node ./scripts/build-docs.js",
    "build:test": "node ./scripts/build-tests.mjs",
    "build:canvasTest": "node ./scripts/build-tests-with-canvas.mjs",
    "rstest": "pnpm --filter=@visactor/vseed rstest",
    "rstest:update": "pnpm --filter=@visactor/vseed rstest:update",
    "rstest:coverage": "pnpm --filter=@visactor/vseed rstest:coverage",
    "test": "pnpm --filter=@visactor/vseed test",
    "test:update": "pnpm --filter=@visactor/vseed test:update",
    "test:coverage": "pnpm --filter=@visactor/vseed test:coverage && node scripts/build-coverage-badge.mjs",
    "publish:ci": "pnpm run build:vseed && pnpm run build:vquery && pnpm changeset publish --filter=@visactor/vseed,@visactor/vquery --access=public",
    "prepare": "husky",
    "sync-bugserver-cases": "node ./scripts/sync-bugserver-cases.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx}": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.13.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "node-fetch": "2.6.7",
    "prettier": "^3.6.2",
    "ts-morph": "26.0.0",
    "turbo": "^2.6.1"
  },
  "packageManager": "pnpm@10.13.1",
  "license": "MIT"
}
